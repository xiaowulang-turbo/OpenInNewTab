{
    "manifest_version": 3,
    "name": "Open In New Tab",
    "version": "1.4.0",
    "description": "Whitelist-based: Add domains via popup to open links in new tabs. Quick add current site, manage domains, dark mode, i18n support.",

    "permissions": ["storage", "activeTab"],

    "host_permissions": ["*://*/*"],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],

    "action": {
        "default_popup": "popup.html",
        "default_title": "Open In New Tab - Manage Whitelist"
    },

    "options_page": "options.html",

    "icons": {
        "16": "icons/icon16.png",
        "24": "icons/icon24.png",
        "32": "icons/icon32.png",
        "64": "icons/icon64.png",
        "128": "icons/icon128.png"
    },

    "web_accessible_resources": [
        {
            "resources": ["popup.html", "popup.js", "popup.css"],
            "matches": ["*://*/*"]
        }
    ]
}
